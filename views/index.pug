extends layout

block content
  div.content
    div.products-header-container
      h1.products-header Welcome to XYZ Store
      a.button.primary(href='/products/add') Add Product
    div.table-container
      table
        thead
          th Product Name
          th Rating
          th Category
          th
        tbody
          each product in products
            tr
              td= product_name
              td 5
              td= product.category
              td
                a(href=`/products/profile/${products.id}`) View Products
