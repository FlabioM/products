extends layout

block content
  div.products-container
    a(href='/products/add') Add Product
    table
      thead
        th Product Name
        th Rating
        th Category
        th
      tbody
        each product in products
          tr
            td= product_name
            td 5
            td= product.category
            td
              a(href=`/products/profile/${products.id}`) View Products
